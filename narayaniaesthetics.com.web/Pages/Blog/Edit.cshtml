@page
@model narayaniaesthetics.com.web.Pages.Blog.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>BlogPost</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BlogPost.Id" />
            <div class="form-group">
                <label asp-for="BlogPost.Title" class="control-label"></label>
                <input asp-for="BlogPost.Title" class="form-control" />
                <span asp-validation-for="BlogPost.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlogPost.Summary" class="control-label"></label>
                <input asp-for="BlogPost.Summary" class="form-control" />
                <span asp-validation-for="BlogPost.Summary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlogPost.Keywords" class="control-label"></label>
                <input asp-for="BlogPost.Keywords" class="form-control" />
                <span asp-validation-for="BlogPost.Keywords" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlogPost.BodyContent" class="control-label"></label>
                <input asp-for="BlogPost.BodyContent" class="form-control" />
                <span asp-validation-for="BlogPost.BodyContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlogPost.AuthorName" class="control-label"></label>
                <input asp-for="BlogPost.AuthorName" class="form-control" />
                <span asp-validation-for="BlogPost.AuthorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlogPost.PublishedDate" class="control-label"></label>
                <input asp-for="BlogPost.PublishedDate" class="form-control" />
                <span asp-validation-for="BlogPost.PublishedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
